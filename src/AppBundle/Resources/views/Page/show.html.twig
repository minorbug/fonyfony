{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Page</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Pagenumber</th>
                <td>{{ entity.pageNumber }}</td>
            </tr>
            <tr>
                <th>Pathpdf</th>
                <td>{{ entity.pathPdf }}</td>
            </tr>
            <tr>
                <th>Pathjpg</th>
                <td>{{ entity.pathJpg }}</td>
            </tr>
            <tr>
                <th>Paththumb</th>
                <td>{{ entity.pathThumb }}</td>
            </tr>
            <tr>
                <th>Pagetext</th>
                <td>{{ entity.pageText }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('page') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('page_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
